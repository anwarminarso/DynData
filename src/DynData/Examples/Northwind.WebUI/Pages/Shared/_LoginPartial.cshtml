@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link" href="javascript:;">
            Hello @HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value!
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Logout" asp>Sign out</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-page="/Account/Login">Sign in</a>
    </li>
}
